{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@kestrel-hq/protocol-sdk": ["../protocol-sdk/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__/**/*"],
  "references": [
    { "path": "../protocol-sdk" }
  ]
}
