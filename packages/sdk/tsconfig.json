{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
  "rootDir": "src",
    "declaration": true,
    "composite": true,
    "baseUrl": ".",
  "moduleResolution": "Node16",
  "module": "Node16",
  "types": ["node", "jest"],
    "paths": {
      "@kestrel-hq/dto": ["../dto/src/index.ts"],
      "@kestrel-hq/math": ["../math/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../dto" },
    { "path": "../math" }
  ],
  "exclude": ["node_modules", "dist"]
}
