{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "..",
    "composite": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "mocha", "jest"],
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "src/index.ts",
    "src/main.ts",
    "src/config.ts",
    "src/validators/**/*.ts",
    "src/services/IntentStore.ts",
    "src/services/IntentFSM.ts",
    "src/services/MetricsTracker.ts",
    "src/fsm/**/*.ts",
    "src/db/**/*.ts",
    "src/stages/**/*.ts",
    "src/utils/**/*.ts",
    "src/simulation/**/*.ts",
    "src/edge/**/*.ts"
  ],
  "references": [
    { "path": "../dto" },
    { "path": "../reasons" },
    { "path": "../math" }
  ]
}