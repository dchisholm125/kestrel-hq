{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "..",
    "composite": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"]
  },
  "include": [
    "src/index.ts",
    "src/main.ts",
    "src/config.ts",
    "src/validators/**/*.ts",
    "src/services/IntentStore.ts",
    "src/services/IntentFSM.ts",
    "src/services/MetricsTracker.ts",
    "src/utils/**/*.ts",
    "../dto/src/**/*.ts"
  ]
}