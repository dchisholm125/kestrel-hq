{
  "name": "@kestrel/protocol-server",
  "version": "1.0.0",
  "private": true,
  "description": "Kestrel protocol server (stub endpoints)",
  "type": "commonjs",
  "main": "dist/protocol-server/src/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start:protocol": "KESTREL_PRIVATE_PLUGINS=1 npx tsx src/index.ts",
    "test:self-proof": "npx tsx src/scripts/self-proof-test.ts",
    "test": "jest --passWithNoTests --config=jest.config.js",
    "test:unit": "jest --testPathPattern=\"__tests__|test/unit\" --runInBand",
    "test:fsm": "jest --testPathPattern=\"test/unit/(statemachine|intentfsm)\\.test\\.ts\" --runInBand",
    "test:stages": "jest --testPathPattern=\"test/unit/stages\\.test\\.ts\" --runInBand",
    "db:migrate": "ts-node ./scripts/dbMigrate.ts",
    "db:refresh-intent-last": "ts-node -e \"require('./src/db/admin').refreshIntentLastEvent()\"",
    "fixtures:make": "ts-node ./scripts/make-fixtures.ts",
    "fixtures:load": "ts-node ./scripts/load-fixtures.ts"
  },
  "dependencies": {
    "@kestrel-hq/dto": "workspace:0.2.0",
    "@kestrel-hq/math": "workspace:0.1.0",
    "@kestrel-hq/reasons": "workspace:0.1.0",
    "axios": "^1.6.0",
    "dotenv": "^17.2.2",
    "ethers": "^6.8.0",
    "express": "^5.1.0",
    "jest-resolve": "^30.1.3",
    "pino": "^8.14.0",
    "prom-client": "^14.0.1",
    "ulid": "^2.3.0",
    "zod": "^3.22.2"
  },
  "optionalDependencies": {
    "pg": "^8.11.0",
    "pg-promise": "^11.5.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.0"
  }
}
